.panel.panel-default.panel-hovered.panel-stacked.mb20
	.panel-heading   
		| Comandos

	.panel-body
		.row
			.col-xs-12.col-md-7
				select(multiple="true" style="width: 150px; height: 150px; font-size: 9pt")
					option(ng-repeat="categoria in categorias_king" ng-model="cmdCategSelected" ng-click="cmdClickCategSelected(categoria)") {{categoria.nombre}}
				select(multiple="true" style="width: 250px; height: 150px; font-size: 9pt; overflow: scroll")
					option(ng-repeat="pregunta in cmdPreguntasTraduc" ng-model="cmdPreguntaSelected" 
						ng-click="cmdClickPreguntaSelected(pregunta, $index)" ng-bind-html="($index+1) + '. ' + pregunta.enunciado") 
				
				span(style="font-weight: bold;") Preg: 
				{{ SocketData.config.info_evento.preg_actual }}
				input(ng-model="SocketData.config.info_evento.preg_actual" type="number" style="width: 60px;")

				button.btn.btn-default(ng-click="showQuestion()") Mostrar pregunta
				
				button.btn.btn-default(ng-click="showPuntajeParticip()") Mostrar puntaje
				
				md-checkbox(ng-click="toggleShowLogoEntidadParticipantes()" ng-true-value="1" ng-false-value="0" ng-model="cmdShowLogoEntidadPartici" aria-label="Mostrar logos") Mostrar logo entidades

		md-button.md-raised(ng-click="showParticipantes()") Mostrar participantes
		
		button.btn.btn-primary(ng-click="empezarExamen()") Empezar exámen  
			i.fa.fa-play
		button.btn.btn-danger(ng-click="nextQuestion()") Siguiente pregunta  
			i.fa.fa-arrow-right


		.row
			.col-xs-12.col-md-7
				md-content
					.form-group(style="width: 200px;margin-top: 15px;")
						.input-group
							md-tooltip Enviar a los clientes seleccionados a una pregunta
							input.form-control(type="number" min="1" placeholder="Número" ng-model="cmdNoPregunta" style="border: 1px solid #ccc; border-right: 0px;")
							.input-group-btn
								button.btn.btn-default(type="button" ng-click="gotoNoQuestionClt()" style="height: 34px; border-left: 0px;") Ir




